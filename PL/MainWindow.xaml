<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="PL test" Height="250" Width="320">

    <Grid>

        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>

            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" MinHeight="69"/>
            <RowDefinition Height="Auto" MinHeight="149"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl Grid.RowSpan="3" Grid.ColumnSpan="2" BorderThickness="0">

            <TabItem Header="Nanny" FontWeight="Bold">
                <Label >
                    <Grid Height="179" Width="289">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="144*"/>
                            <ColumnDefinition Width="145*"/>

                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Grid.ColumnSpan="2" Content="Nanny functions:" HorizontalAlignment="Left" Height="45" VerticalAlignment="Top" Width="289"/>
                        <Button x:Name="addNanny" Content="Add Nanny" HorizontalAlignment="Left" Height="45" Grid.Row="1" 
                                VerticalAlignment="Top" Width="134" Margin="10,0,0,0" Click="click_addNanny"/>
                        <Button x:Name="deleteNanny" Content="Delete Nanny" Grid.Column="1" HorizontalAlignment="Left" 
                                Height="45" Grid.Row="1" VerticalAlignment="Top" Width="135" Click="click_deleteNanny"/>
                        <Button Content="exit" Margin="0,21,108,-33" Grid.Row="3" Background="Red" Click="Button_Click"/>
                        <Button x:Name="updateNanny" Content="Update Nanny" HorizontalAlignment="Left" Height="44" Grid.Row="2" 
                                VerticalAlignment="Top" Width="134" Margin="10,0,0,0" Click="click_updateNanny"/>
                        <Button x:Name="getAllNanny" Content="Get all Nannies" Grid.Column="1" HorizontalAlignment="Left" Height="44" 
                                Grid.Row="2" VerticalAlignment="Top" Width="135" Click="click_getAllNannies"/>
                    </Grid>
                </Label>
            </TabItem>
            <TabItem Header="Mother" FontWeight="Bold">
                <Label >
                    <Grid Height="179" Width="289">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="144*"/>
                            <ColumnDefinition Width="145*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Label Grid.ColumnSpan="2" Content="Mother functions:" HorizontalAlignment="Left" Height="45" VerticalAlignment="Top" Width="289"/>
                        <Button x:Name="addMother" Content="Add Mother" HorizontalAlignment="Left" Height="45" Grid.Row="1" 
                                VerticalAlignment="Top" Width="134" Margin="10,0,0,0" Click="click_addMother"/>
                        <Button Content="exit" Margin="0,16,108,-28" Grid.Row="3" Background="Red" Click="Button_Click"/>
                        <Button x:Name="deleteMother" Content="Delete Mother" Grid.Column="1" HorizontalAlignment="Left" Height="45" 
                                Grid.Row="1" VerticalAlignment="Top" Width="135" Click="click_deleteMother"/>
                        <Button x:Name="updateMother" Content="Update Mother" HorizontalAlignment="Left" Height="44" Grid.Row="2" 
                                VerticalAlignment="Top" Width="134" Margin="10,0,0,0" Click="click_updateMother"/>
                        <Button x:Name="getAllMothers" Content="Get all Mothers" Grid.Column="1" HorizontalAlignment="Left" Height="44" 
                                Grid.Row="2" VerticalAlignment="Top" Width="135" Click="click_getAllMothers"/>
                        <Image x:Name="mom"  Source="images/mother.png" Stretch="Fill" Grid.Column="1" Margin="65,-24,10,10"/>
                    </Grid>
                </Label>
            </TabItem>
            <TabItem Header="Child" FontWeight="Bold">
                <Label >
                    <Grid Height="179" Width="289">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="144*"/>
                            <ColumnDefinition Width="145*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Label Grid.ColumnSpan="2" Content="Child functions:" HorizontalAlignment="Left" Height="45" VerticalAlignment="Top" Width="289"/>
                        <Button x:Name="addChild" Content="Add Child" HorizontalAlignment="Left" Height="45" Grid.Row="1" 
                                VerticalAlignment="Top" Width="134" Margin="10,0,0,0" Click="click_addChild"/>

                        <Button x:Name="deleteChild" Content="Delete Child " Grid.Column="1" HorizontalAlignment="Left" Height="45" 
                                Grid.Row="1" VerticalAlignment="Top" Width="135" Click="click_deleteChild"/>
                        <Button x:Name="updateChild" Content="Update Child" HorizontalAlignment="Left" Height="44" Grid.Row="2" 
                                VerticalAlignment="Top" Width="134" Margin="10,0,0,0" Click="click_updateChild"/>
                        <Button x:Name="getKidsByMom" Content="Get kids by mom" Grid.Column="1" HorizontalAlignment="Left" Height="44" 
                                Grid.Row="2" VerticalAlignment="Top" Width="135" Click="click_getKidsByMom"/>
                        <Image x:Name="child"  Source="images/child.png" Stretch="Fill" Grid.Column="1" Margin="65,-24,10,10"/>
                        <Button Content="exit" Margin="0,16,108,-28" Grid.Row="3" Background="Red" Click="Button_Click"/>
                    </Grid>
                </Label>
            </TabItem>

            <TabItem Header="Contract" FontWeight="Bold">
                <Label >
                    <Grid Height="179" Width="289">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="144*"/>
                            <ColumnDefinition Width="145*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Label Grid.ColumnSpan="2" Content="Contract functions:" HorizontalAlignment="Left" Height="45" VerticalAlignment="Top" Width="289"/>
                        <Button  x:Name="addContract" Content="Add Contract" HorizontalAlignment="Left" Height="45" Grid.Row="1" 
                                 VerticalAlignment="Top" Width="134" Margin="10,0,0,0" Click="click_addContract"/>
                        <Button  x:Name="deleteContract" Content="Delete Contract" Grid.Column="1" HorizontalAlignment="Left" 
                                 Height="45" Grid.Row="1" VerticalAlignment="Top" Width="135" Click="click_deleteContract"/>
                        <Button  x:Name="updateContract" Content="Update Contract" HorizontalAlignment="Left" Height="44" 
                                 Grid.Row="2" VerticalAlignment="Top" Width="134" Margin="10,0,0,0" Click="click_updateContract"/>
                        <Button  x:Name="getContracts" Content="Get Contracs" Grid.Column="1" HorizontalAlignment="Left" Height="44"
                                 Grid.Row="2" VerticalAlignment="Top" Width="135" />
                        <Button Content="exit" Margin="0,16,108,-28" Grid.Row="3" Background="Red" Click="Button_Click"/>
                    </Grid>
                </Label>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
