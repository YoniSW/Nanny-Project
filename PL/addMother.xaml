<Window x:Class="PL.addMother"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="addMother" Height="400" Width="250">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="115*"/>
            <ColumnDefinition Width="127*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Label Content="Enter all fields:" HorizontalAlignment="Left" Height="45" VerticalAlignment="Top" Width="289" Margin="0,0,-47,0" 
               Grid.RowSpan="2" Grid.ColumnSpan="2" FontWeight="Black" FontSize="18"/>
        <TextBox HorizontalAlignment="Right" Height="auto" Grid.Row="1" VerticalAlignment="Center" Width="105" Margin="0,10,10,10" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Right" Height="auto"  Grid.Row="2"  VerticalAlignment="Center" Width="105" Margin="0,10,10,10" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Right" Height="auto"  Grid.Row="3"  VerticalAlignment="Center" Width="105" Margin="0,10,10,10" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Right" Height="auto"  Grid.Row="4"  VerticalAlignment="Center" Width="105" Margin="0,10,10,10" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Right" Height="auto" Grid.Row="5" VerticalAlignment="Center" Width="105" Margin="0,10,10,10" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Right" Height="auto"  Grid.Row="6" VerticalAlignment="Center" Width="105" Margin="0,10,10,10" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Right" Height="auto"  Grid.Row="7" VerticalAlignment="Center" Width="105" Margin="0,10,10,10" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Right" Height="auto"  Grid.Row="8" VerticalAlignment="Center" Width="105" Margin="0,10,10,10" Grid.Column="1"/>
        <Label Content="Label" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Top" Width="105" Height="37" FontSize="14" FontWeight="DemiBold"/>
        <Label Content="Label" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Top" Width="105" Height="37" FontSize="14" FontWeight="DemiBold"/>
        <Label Content="Label" HorizontalAlignment="Left" Grid.Row="3" VerticalAlignment="Top" Width="105" Height="37" FontSize="14" FontWeight="DemiBold"/>
        <Label Content="Label" HorizontalAlignment="Left" Grid.Row="4" VerticalAlignment="Top" Width="105" Height="37" FontSize="14" FontWeight="DemiBold"/>
        <Label Content="Label" HorizontalAlignment="Left" Grid.Row="5" VerticalAlignment="Top" Width="105" Height="37" FontSize="14" FontWeight="DemiBold"/>
        <Label Content="Label" HorizontalAlignment="Left" Grid.Row="6" VerticalAlignment="Top" Width="105" Height="37" FontSize="14" FontWeight="DemiBold"/>
        <Label Content="Label" HorizontalAlignment="Left" Grid.Row="7" VerticalAlignment="Top" Width="105" Height="37" FontSize="14" FontWeight="DemiBold"/>

    </Grid>
</Window>
