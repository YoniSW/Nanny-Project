<Window x:Class="PL.deleteNanny"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="deleteNanny" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label  x:Name ="label" Content="Please enter Nannies ID you wish to delete" HorizontalAlignment="Left" Height="43" 
               Margin="22,21,0,10" VerticalAlignment="Center" Width="243" FontSize="12"/>
        <TextBox x:Name ="textBox" HorizontalAlignment="Left" Height="40" Margin="22,20,0,0" Grid.Row="1"
                 TextWrapping="Wrap" Text="valid ID number only." VerticalAlignment="Top" Width="243" />
        <Button  x:Name ="button" Content="Delete!" HorizontalAlignment="Left" Height="44" Margin="22,10,0,0" Grid.Row="2" 
                 VerticalAlignment="Center" Width="243" Click="button_Click"/>

    </Grid>
</Window>
