<Window x:Class="PL.deleteNanny"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="deleteNanny" Height="700" Width="1000" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Label  x:Name ="label" Content="Please enter Nannies ID you wish to delete" HorizontalAlignment="Left" Height="32" 
               Margin="22,31,0,27" VerticalAlignment="Center" Width="243" FontSize="12"/>
        <Button  x:Name ="button" Content="Delete!" HorizontalAlignment="Left" Height="35" Margin="22,26,0,29" Grid.Row="2" 
                 VerticalAlignment="Center" Width="243" Click="button_Click" RenderTransformOrigin="0.494,0.429"/>
        <ComboBox x:Name="textBox" HorizontalAlignment="Left" Margin="41,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="205"
                  SelectionChanged="textBox_SelectionChanged" Height="54"/>

    </Grid>
</Window>
