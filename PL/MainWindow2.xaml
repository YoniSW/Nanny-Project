        <Button x:Name="Childbutton" Content="child" HorizontalAlignment="Left" Margin="24,267,0,0" VerticalAlignment="Top" Width="200" Height="100" Click="ChildButton_Click"/>
        <Button x:Name="ContractButton" Content="Contracts" HorizontalAlignment="Left" Margin="267,267,0,0" VerticalAlignment="Top" 
                Width="200" Height="100" Click="ContractButton_Click" Grid.Column="1">
            <Button.Foreground>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.HighlightTextColorKey}}"/>
            </Button.Foreground>
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Gray" Offset="0.003"/>
                    <GradientStop Color="#FF808080" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="Exit" Content="Exit" HorizontalAlignment="Left" Margin="380,646,0,0" VerticalAlignment="Top" Width="106" Height="36" Click="Exit_Click" Grid.Column="1"/>
        <Button x:Name="Admin" Content="Administrator" Click="Admin_Click" HorizontalAlignment="Left"
