<Window x:Class="PL.deleteContract"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="deleteContract" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="82*"/>
            <RowDefinition Height="90*"/>
            <RowDefinition Height="97*"/>
        </Grid.RowDefinitions>
        <Label x:Name ="label" Content="Please choose Contract ID you wish to delete" HorizontalAlignment="Left" Height="52" Margin="10,10,0,0" VerticalAlignment="Top" Width="272"/>
        <TextBox x:Name ="textBox" HorizontalAlignment="Left" Height="45" Margin="10,10,0,0" Grid.Row="1" TextWrapping="Wrap" 
                 Text="" VerticalAlignment="Top" Width="251"/>
        <Button x:Name ="button" Content="Delete!" HorizontalAlignment="Left" Height="55" Margin="48,10,0,0" Grid.Row="2" 
                VerticalAlignment="Top" Width="179" Click="delete_Click"/>

    </Grid>
</Window>
