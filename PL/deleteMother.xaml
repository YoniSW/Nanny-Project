<Window x:Class="PL.deleteMother"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="deleteMother" Height="700" Width="1000" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="82*"/>
            <RowDefinition Height="90*"/>
            <RowDefinition Height="97*"/>
        </Grid.RowDefinitions>
        <Label Content="Please enter Mother ID you wish to delete" HorizontalAlignment="Left" Height="52" Margin="10,10,0,0" VerticalAlignment="Top" Width="272"/>
        <Button x:Name="button" Content="Delete!" HorizontalAlignment="Left" Height="55" Margin="48,10,0,0" 
                Grid.Row="2" VerticalAlignment="Top" Width="179"  Click=" button_Click"/>
        <ComboBox x:Name="textBox"  HorizontalAlignment="Left" Margin="28,19,0,0" Grid.Row="1" VerticalAlignment="Top" Width="229" 
                  Height="42" SelectionChanged="textBox_SelectionChanged" />
        <Button Content="Back" Click="Button_Click_1" HorizontalAlignment="Left" Height="39" Margin="881,201,0,0" Grid.Row="2" VerticalAlignment="Top" Width="101"/>


    </Grid>
</Window>
