<Window x:Class="PL.Windows.Password"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Windows"
        mc:Ignorable="d"
        Title="Password" Height="200" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="136*"/>
            <RowDefinition Height="33*"/>
        </Grid.RowDefinitions>
        <Label Content="Enter administrator password" FontSize="17" HorizontalAlignment="Left" Height="33" Margin="25,10,0,0" VerticalAlignment="Top" Width="241"/>
        <TextBox x:Name="password" HorizontalAlignment="Left" Height="26" Margin="39,63,0,0" TextWrapping="Wrap"  VerticalAlignment="Top"
                 Width="201"/>
        <Button Content="Login!" HorizontalAlignment="Left" Height="40" Margin="65,111,0,0" VerticalAlignment="Top"
                Width="146" Grid.RowSpan="2" Click="Button_Click"/>

    </Grid>
</Window>
